{
  "signup": {
    "post": {
      "tags": ["Auth"],
      "summary": "User signup",
      "description": "Register a new user account",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/auth.json#/SignupRequest"
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "User registered successfully",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/auth.json#/SignupResponse"
              }
            }
          }
        },
        "400": {
          "description": "Bad request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/common.json#/schemas/Error"
              }
            }
          }
        }
      }
    }
  },
  "login": {
    "post": {
      "tags": ["Auth"],
      "summary": "User login",
      "description": "Authenticate a user and get access token",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/auth.json#/SigninRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Login successful",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/auth.json#/SigninResponse"
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/common.json#/schemas/Error"
              }
            }
          }
        }
      }
    }
  },
  "socialLogin": {
    "post": {
      "tags": ["Auth"],
      "summary": "Social login",
      "description": "Login using a social provider (Google, Apple)",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../schemas/auth.json#/schemas/SocialLoginRequest"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Login successful",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/auth.json#/SigninResponse"
              }
            }
          }
        },
        "400": {
          "description": "Bad request",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/common.json#/schemas/Error"
              }
            }
          }
        }
      }
    }
  }
}
