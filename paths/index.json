{
  "paths": {
    "/api/v1/user/signup": {
      "$ref": "./auth.json#/signup"
    },
    "/api/v1/user/login": {
      "$ref": "./auth.json#/login"
    },
    "/api/v1/user/social-login": {
      "$ref": "./auth.json#/socialLogin"
    },
    "/api/v1/user/profile": {
      "$ref": "./user.json#/profile"
    },
    "/api/v1/user/verify-email": {
      "post": {
        "tags": ["User"],
        "summary": "Verify email address",
        "description": "Verify a user's email address with token",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "description": "Email verification token"
                  }
                },
                "required": ["token"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email verified successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./common.json#/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Invalid token"
          }
        }
      }
    },
    "/api/v1/user/verify-phone": {
      "post": {
        "tags": ["User"],
        "summary": "Verify phone number",
        "description": "Verify a user's phone number with OTP",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "otp": {
                    "type": "string",
                    "description": "One-time password sent to phone"
                  }
                },
                "required": ["otp"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Phone verified successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/common.json#/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Invalid OTP"
          }
        }
      }
    },
    "/api/v1/user/password": {
      "put": {
        "tags": ["User"],
        "summary": "Change password",
        "description": "Change user's password",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "../schemas/user.json#/schemas/ChangePasswordRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "../schemas/common.json#/schemas/ApiResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "Invalid password"
          }
        }
      }
    }
  }
}
