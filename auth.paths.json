{
	"signup": {
		"post": {
			"tags": ["Auth"],
			"summary": "Register a new user",
			"description": "Creates a new user account with the provided information",
			"operationId": "signupUser",
			"requestBody": {
				"required": true,
				"content": {
					"application/json": {
						"schema": {
							"$ref": "./swagger.json#/components/schemas/SignupRequest"
						}
					}
				}
			},
			"responses": {
				"201": {
					"description": "User registered successfully",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "./swagger.json#/components/schemas/SignupResponse"
							}
						}
					}
				},
				"400": {
					"description": "Invalid input"
				},
				"409": {
					"description": "User already exists"
				}
			}
		}
	},
	"login": {
		"post": {
			"tags": ["Auth"],
			"summary": "Logs in user",
			"description": "Logs in user account with the provided information",
			"operationId": "loginUser",
			"requestBody": {
				"required": true,
				"content": {
					"application/json": {
						"schema": {
							"$ref": "./swagger.json#/components/schemas/SigninRequest"
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "Login successful",
					"content": {
						"application/json": {
							"schema": {
								"$ref": "./swagger.json#/components/schemas/SigninResponse"
							}
						}
					}
				},
				"400": {
					"description": "Invalid input"
				}
			}
		}
	}
}
